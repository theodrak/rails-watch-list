<div class="banner" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url(https://raw.githubusercontent.com/lewagon/fullstack-images/master/uikit/background.png);">
  <div class="container">
    <h1>Lists</h1>
  </div>
</div>
<div class="container text-center">
  <div class="row text-center py-3">
    <% @lists.each do |list| %>
      <div class="col-lg-4 col-sm-12 py-3">
        <%= link_to list_path(list), class: "link-underline link-underline-opacity-0"  do %>
          <div class="card-category" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url(<%= list.image_url%>)">
            <%= list.name %>
          </div>
        <% end %>
        </div>
    <% end %>
  </div>
</div>
